<h1>Eat-da-burger!</h1>

<h2>Burgers for you to eat!</h2>

<ul>
  {{#each burger}}
  {{#unless eaten}}
  {{> burgers/burgers-block eaten=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers you have scoffed!</h2>

<ul>
  {{#each burger}}
  {{#if this.eaten}}
  {{> burgers/burgers-block eaten=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="newBurger" name="burger_name">
  </div>

  <div class="form-group">
    <label for="eat">Eat da burger?</label><br>
    <input type="radio" name="burgers" value="1" id="eaten" checked> Devoured!<br>
    <input type="radio" name="burgers" value="0" id="not-eaten"> Eat me!
  </div>

  <button type="submit">Add burger</button>
</form>